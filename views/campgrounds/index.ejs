<% layout("/layouts/boilerplate") %>
    <h1 class="text-center mb-5">All Campgrounds:</h1>
    
        <% for(campground of campgrounds) { %>
            <div class="card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <% if (campground.images.length) { %>
                            <img src="<%= campground.images[0].src %>" alt="" class="img-fluid">
                          <% } else { %>
                            <img src="https://images.unsplash.com/photo-1529385101576-4e03aae38ffc?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="img-fluid">
                          <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %></small>
                            </p>
                            <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
</script>